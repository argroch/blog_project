<p id="notice"><%= notice %></p>
<div id="blogdiv">
<p>
  <h2><%= @blog.title %></h2>
</p>

  <p>
    <%= @blog.content %>
  </p>
    <div id="tagindex">
      <font size="2">Tags:</font>
      <% @tags.each do |tag| %>
        <span id="tagging"><%= tag.name %></span>
        &nbsp;
      <% end %>
    </div>
</div>
<%= link_to 'Edit Post', edit_blog_path(@blog) %> | <%= link_to 'View All Posts', yourposts_path %> | 
  <%= link_to 'Back to Index', blogs_path %>
<br />

<h3 style="margin-bottom: 0px;">Comments</h3>
	<%= link_to 'Add Comment', new_comment_path(:blog_id => @blog.id), :style=>"font-size:14px" %><br/>
  <% @comments.each do |comment| %>
		<div id="commentdiv">
      <h5><i><%= comment.name %></i></h5>
      <p><%= comment.content %></p>
      <p><%= comment.created_at.strftime('%m/%d/%Y %H:%M:%S') %> |
      <%= comment.updated_at.strftime('%m/%d/%Y %H:%M:%S') %> </p> 
    </div>
    <br />     
  <% end %>
<p><a href=#>Back to Top</a></p>
<br />