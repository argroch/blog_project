<h1>The Amazing Ramblings of Sangamon Saginaw III</h1>
  <% @blogs.each do |blog| %>
    <div id="blogdiv">
      <h2><%= link_to blog.title, blog %></h2>
      <div id="yptags">
        <% blog.tags.each do |tag| %>
          <span id="tagging"><%= tag.name %></span>
          &nbsp;
        <% end %>
      </div>
      <div id="timetext">Created at: <%= blog.created_at.strftime('%m/%d/%Y %H:%M:%S') %></div>
      <div id="timetext">Last Updated at: <%= blog.updated_at.strftime('%m/%d/%Y %H:%M:%S') %></div>
      <br />
      <div><%= blog.content %></div>
      <br />
      <% count = 0 %>
      <div>
        <% blog.comments.each do |comment| %>
          <% count += 1 %>
        <% end %>
        <%= link_to 'Comments: ', blog %><%= count %>
      </div>
      <div><%= link_to 'Edit', edit_blog_path(blog), :id => "editlink" %> | 
        <%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' }, :id => "editlink" %></div>
    </div>
  <% end %>